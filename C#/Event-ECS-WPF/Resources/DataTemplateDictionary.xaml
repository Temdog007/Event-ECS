<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Event_ECS_WPF.Controls"
                    xmlns:misc="clr-namespace:Event_ECS_WPF.Misc"
                    xmlns:selector="clr-namespace:Event_ECS_WPF.TemplateSelectors">
    
    <DataTemplate x:Key="projectTemplate">
        <controls:ProjectControl Project="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="loveProjectTemplate">
        <ScrollViewer>
            <controls:LoveProjectControl LoveProject="{Binding}"/>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate x:Key="projectMenuTemplate">
        <controls:ProjectMenuControl Project="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="stringComponentVariable">
        <controls:ComponentVariableStringControl ComponentVariable="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="defaultComponentVariable">
        <controls:ComponentVariableControl ComponentVariable="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="colorComponentVariable">
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10">
            <Label DockPanel.Dock="Left" FontWeight="Bold" Content="{Binding Name, Converter={StaticResource colorIndexConv}}" Margin="5"/>
            <TextBlock DockPanel.Dock="Right" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <Slider Minimum="0" Maximum="1" TickFrequency="0.05" MinWidth="150" MinHeight="25" 
                    TickPlacement="BottomRight" Margin="5" IsMoveToPointEnabled="True"
                    Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
    </DataTemplate>

    <DataTemplate x:Key="boolComponentVariable">
        <CheckBox IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="{Binding Name}"/>
    </DataTemplate>

    <DataTemplate x:Key="idComponentVariable">
        <StackPanel Orientation="Horizontal" Background="Transparent">
            <TextBlock Text="ID: " Background="Transparent" FontWeight="Bold"/>
            <TextBlock Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="Transparent"/>
        </StackPanel>
    </DataTemplate>
    
    <selector:ProjectDataTemplateSelector x:Key="projectSelector"/>
    <selector:ComponentTemplateSelector x:Key="componentTemplateSelector"/>
</ResourceDictionary>