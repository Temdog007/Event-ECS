<UserControl x:Class="Event_ECS_WPF.Controls.EntityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Event_ECS_WPF.Controls"
             xmlns:converter="clr-namespace:Event_ECS_WPF.Converters"
             xmlns:ex="clr-namespace:Event_ECS_WPF.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="m_entityControl">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <ex:BindingProxy x:Key="EntityControl" Data="{Binding ElementName=m_entityControl}"/>
    </UserControl.Resources>

    <Expander ExpandDirection="Right">

        <Expander.ContextMenu>
            <ContextMenu>

                <ContextMenu.ItemsSource>
                    <CompositeCollection>
                        <MenuItem Header="Add Component" ItemsSource="{Binding Source={StaticResource EntityControl}, Path=Data.Entity.AvailableComponents}">
                            <MenuItem.ItemTemplate>
                                <DataTemplate>
                                    <MenuItem Header="{Binding}" CommandParameter="{Binding}" Command="{Binding Source={StaticResource EntityControl}, Path=Data.AddComponentCommand}">
                                    </MenuItem>
                                </DataTemplate>
                            </MenuItem.ItemTemplate>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Remove Entity" Command="{Binding Source={StaticResource EntityControl}, Path=Data.RemoveEntityCommand}"/>
                    </CompositeCollection>
                </ContextMenu.ItemsSource>

            </ContextMenu>
        </Expander.ContextMenu>

        <Expander.Header>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding ElementName=m_entityControl, Path=Entity.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Margin="10">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}ID #{0}">
                            <Binding Path="Entity.ID" ElementName="m_entityControl" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </Expander.Header>

        <ListBox>

            <Expander Header="Events" Background="LightYellow">
                <ListBox ItemsSource="{Binding ElementName=m_entityControl, Path=Entity.Events, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Expander>

            <GroupBox Header="Components">
                <ListBox x:Name="ComponentsGroupBox" ItemsSource="{Binding ElementName=m_entityControl, Path=Entity.Components, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <controls:ComponentControl Component="{Binding}" Background="AliceBlue" 
                                                       IsExpanded="{Binding Mode=TwoWay, Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem, Mode=FindAncestor}}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </ListBox>
    </Expander>
</UserControl>
