<UserControl x:Class="Event_ECS_WPF.Controls.EntityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Event_ECS_WPF.Controls"
             xmlns:converter="clr-namespace:Event_ECS_WPF.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:ex="clr-namespace:Event_ECS_WPF.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="m_entityControl"
             PreviewMouseRightButtonDown="Entity_PreviewMouseRightButtonDown">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <ex:BindingProxy x:Key="EntityControl" Data="{Binding ElementName=m_entityControl}"/>

        <converter:NotConverter x:Key="notCol"/>

        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </UserControl.Resources>

    <StackPanel>

        <StackPanel.ContextMenu>
            <ContextMenu>

                <ContextMenu.ItemsSource>
                    <CompositeCollection>
                        <MenuItem Header="Add Component" ItemsSource="{Binding Source={StaticResource EntityControl}, Path=Data.Project.Components, UpdateSourceTrigger=PropertyChanged}">
                            <MenuItem.ItemTemplate>
                                <DataTemplate>
                                    <MenuItem Header="{Binding}" CommandParameter="{Binding}" Command="{Binding Source={StaticResource EntityControl}, Path=Data.AddComponentCommand}"/>
                                </DataTemplate>
                            </MenuItem.ItemTemplate>
                        </MenuItem>
                        <MenuItem Header="Remove Component" Command="{Binding Source={StaticResource EntityControl}, Path=Data.RemoveComponentCommand}"/>
                    </CompositeCollection>
                </ContextMenu.ItemsSource>

            </ContextMenu>
        </StackPanel.ContextMenu>

        <GroupBox Header="Enabled">
            <StackPanel Orientation="Vertical">

                <RadioButton IsChecked="{Binding ElementName=m_entityControl, Path=Entity.IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=100}" 
                             Content="Enabled" Command="{Binding ElementName=m_entityControl, Path=SetEntityEnabledCommand}" CommandParameter="{StaticResource True}">
                    <RadioButton.GroupName>
                        <MultiBinding StringFormat="{}{0}{1}">
                            <Binding ElementName="m_entityControl" Path="Entity.Name"/>
                            <Binding ElementName="m_entityControl" Path="Entity.ID"/>
                        </MultiBinding>
                    </RadioButton.GroupName>
                </RadioButton>

                <RadioButton IsChecked="{Binding ElementName=m_entityControl, Path=Entity.IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource notCol}, Delay=100}" 
                             Content="Disabled" Command="{Binding ElementName=m_entityControl, Path=SetEntityEnabledCommand}" CommandParameter="{StaticResource False}">
                    <RadioButton.GroupName>
                        <MultiBinding StringFormat="{}{0}{1}">
                            <Binding ElementName="m_entityControl" Path="Entity.Name"/>
                            <Binding ElementName="m_entityControl" Path="Entity.ID"/>
                        </MultiBinding>
                    </RadioButton.GroupName>
                </RadioButton>
            </StackPanel>
        </GroupBox>

        <Expander Header="Events" Background="LightYellow">
            <ListBox ItemsSource="{Binding ElementName=m_entityControl, Path=Entity.Events, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Expander>

        <GroupBox Header="Components">
            <ListBox x:Name="ComponentsGroupBox" ItemsSource="{Binding ElementName=m_entityControl, Path=Entity.Components, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     SelectedItem="{Binding ElementName=m_entityControl, Path=SelectedComponent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <controls:ComponentControl Component="{Binding}" Background="AliceBlue" IsExpanded="{Binding Mode=TwoWay, Path=IsSelected, 
                                                            RelativeSource={RelativeSource AncestorType=ListBoxItem, Mode=FindAncestor}}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </StackPanel>
</UserControl>
