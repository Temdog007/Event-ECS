<UserControl x:Class="Event_ECS_WPF.Controls.ProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             x:Name="m_project">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <GroupBox Margin="5">

        <GroupBox.Header>
            <TextBox Text="{Binding ElementName=m_project, Path=Project.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </GroupBox.Header>

        <StackPanel Margin="5">

            <GroupBox Margin="5" Header="Initializer Script"
                      ToolTip="This lua script should return a function that returns the systems that ">
                <Button Content="{Binding ElementName=m_project, Path=Project.InitializerScript, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        HorizontalAlignment="Stretch" Margin="5" MinHeight="20" Click="Button_Click"/>
            </GroupBox>

            <GroupBox Margin="5" Header="Path to Component Files">
                <Button Command="{Binding ElementName=m_project, Path=GetPathCommand}" CommandParameter="ComponentPath" Margin="5" MinHeight="20"
                        HorizontalAlignment="Stretch"
                    Content="{Binding ElementName=m_project, Path=Project.ComponentPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </GroupBox>

            <GroupBox Margin="5" Header="Path to Library Files">
                <Button Command="{Binding ElementName=m_project, Path=GetPathCommand}" CommandParameter="LibraryPath" Margin="5" MinHeight="20"
                        HorizontalAlignment="Stretch"
                        Content="{Binding ElementName=m_project, Path=Project.LibraryPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </GroupBox>

            <Expander Header="Events To Ignore Log">
                <DataGrid ItemsSource="{Binding ElementName=m_project, Path=Project.EventsToIgnore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                    <DataGrid.ItemTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"/>
                        </DataTemplate>
                    </DataGrid.ItemTemplate>

                </DataGrid>
            </Expander>

        </StackPanel>
    </GroupBox>
</UserControl>
