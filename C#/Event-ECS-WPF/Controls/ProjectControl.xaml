<UserControl x:Class="Event_ECS_WPF.Controls.ProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             x:Name="m_project">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <GroupBox Margin="5">

        <GroupBox.Header>
            <TextBox Text="{Binding ElementName=m_project, Path=Project.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </GroupBox.Header>

        <StackPanel Margin="5">

            <GroupBox Margin="5" Header="Initializer Script"
                      ToolTip="This lua script should return a function that returns the systems that ">
                <Button Content="{Binding ElementName=m_project, Path=Project.InitializerScript, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        HorizontalAlignment="Stretch" Margin="5" MinHeight="20" Click="Button_Click"/>
            </GroupBox>

            <GroupBox Margin="5" Header="Path to Component Files">
                <Button Command="{Binding ElementName=m_project, Path=GetPathCommand}" CommandParameter="ComponentPath" Margin="5" MinHeight="20"
                        HorizontalAlignment="Stretch"
                    Content="{Binding ElementName=m_project, Path=Project.ComponentPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </GroupBox>
            
            <GroupBox Margin="5" Header="Path to Library Files">
                <Button Command="{Binding ElementName=m_project, Path=GetPathCommand}" CommandParameter="LibraryPath" Margin="5" MinHeight="20"
                        HorizontalAlignment="Stretch"
                        Content="{Binding ElementName=m_project, Path=Project.LibraryPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </GroupBox>

            <GroupBox Header="Commands">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="20"/>
                        <ColumnDefinition Width="auto" MinWidth="20"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" x:Name="eventText" Margin="5" PreviewKeyDown="EventText_PreviewKeyDown" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button Content="Broadcast&#xA;Event"  Grid.Column="1"
                    Command="{Binding ElementName=m_project, Path=BroadcastEventCommand}" CommandParameter="{Binding ElementName=eventText, Path=Text}"/>
                </Grid>
            </GroupBox>
            
        </StackPanel>
    </GroupBox>
</UserControl>
