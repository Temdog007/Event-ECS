<UserControl x:Class="Event_ECS_WPF.Controls.EntityComponentSystemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Event_ECS_WPF.Controls"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:ex="clr-namespace:Event_ECS_WPF.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="m_system"
             PreviewMouseRightButtonDown="System_PreviewMouseRightButtonDown">
    
    <UserControl.Resources>
        <CollectionViewSource x:Key="entitiesSrc" Source="{Binding ElementName=m_system, Path=EntityComponentSystem.Entities, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ID"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <ex:BindingProxy x:Key="SystemControl" Data="{Binding ElementName=m_system}"/>
    </UserControl.Resources>
    
    <GroupBox>

        <GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding ElementName=m_system, Path=EntityComponentSystem.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,50,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Frame Rate"/>
                    <TextBox VerticalAlignment="Stretch" Text="{Binding ElementName=m_system, Path=EntityComponentSystem.FrameRate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Delay=500}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox.Header>

        <GroupBox.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Add Entity" Command="{Binding Source={StaticResource SystemControl}, Path=Data.AddEntityCommand}"/>
                <MenuItem Header="Remove Entity" Command="{Binding Source={StaticResource SystemControl}, Path=Data.RemoveEntityCommand}"/>
            </ContextMenu>
        </GroupBox.ContextMenu>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Expander Header="Registered Components" Grid.Row="0" Background="Snow">
                <ListBox ItemsSource="{Binding ElementName=m_system, Path=EntityComponentSystem.RegisteredComponents, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Expander>

            <Expander Header="Entities" Grid.Row="1" IsExpanded="True">

                <ListBox ItemsSource="{Binding Source={StaticResource entitiesSrc}}" 
                         SelectedItem="{Binding ElementName=m_system, Path=SelectedEntity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Expander>
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Margin="5,0,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}ID #{0}">
                                                    <Binding Path="ID" UpdateSourceTrigger="PropertyChanged"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Expander.Header>
                                <controls:EntityControl Entity="{Binding}"/>
                            </Expander>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                </ListBox>
                
            </Expander>
        </Grid>
    </GroupBox>
</UserControl>
