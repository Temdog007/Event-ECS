<UserControl x:Class="Event_ECS_WPF.Controls.EntityComponentSystemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Event_ECS_WPF.Controls"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="m_system">
    
    <UserControl.Resources>
        <CollectionViewSource x:Key="entitiesSrc" Source="{Binding ElementName=m_system, Path=EntityComponentSystem.Entities, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ID"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    
    <GroupBox>

        <GroupBox.Header>
            <TextBox Text="{Binding ElementName=m_system, Path=EntityComponentSystem.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </GroupBox.Header>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Expander Header="Registered Components" Grid.Row="0" Background="LightBlue">
                <ListBox ItemsSource="{Binding ElementName=m_system, Path=EntityComponentSystem.RegisteredComponents, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding ElementName=m_system, Path=EntityComponentSystem.SelectedComponent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Expander>

            <Expander Header="Entities" Grid.Row="1">
                <TreeView ItemsSource="{Binding Source={StaticResource entitiesSrc}}" Tag="{Binding ElementName=m_system}">
                    <TreeView.ContextMenu>
                        <ContextMenu DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                            <MenuItem Header="Add Entity" Command="{Binding Path=AddEntityCommand}"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <controls:EntityControl Entity="{Binding}"/>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Expander>
        </Grid>
    </GroupBox>
</UserControl>
