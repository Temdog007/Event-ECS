<UserControl x:Class="Event_ECS_WPF.Controls.ComponentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Event_ECS_WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="m_componentControl">
    <GroupBox Header="{Binding ElementName=m_componentControl, Path=Component.Name}" MouseEnter="GroupBox_MouseEnter" MouseLeave="GroupBox_MouseLeave"
              Tag="{Binding ElementName=m_componentControl}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <GroupBox.ContextMenu>
            <ContextMenu DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                <MenuItem Header="Remove Component" Command="{Binding Path=RemoveComponentCommand}"/>
            </ContextMenu>
        </GroupBox.ContextMenu>

        <DataGrid ItemsSource="{Binding ElementName=m_componentControl, Path=Component.Variables, Mode=TwoWay}" AutoGenerateColumns="False" RowBackground="LightCoral"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanUserResizeRows="False" AlternatingRowBackground="LightSalmon" Visibility="Collapsed">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=2000}" Width="*"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=2000}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </GroupBox>
</UserControl>
